#!/usr/bin/env bash
# Global configuration
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

# Default SSL material locations
ca-base /etc/ssl/certs
crt-base /etc/ssl/private

# Default ciphers to use on SSL-enabled listening sockets.
# For added security, use the latest recommended ciphers and disable SSLv3 and TLSv1.
ssl-default-bind-ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256:ECDHE-RSA-AES256-SHA384
ssl-default-bind-options no-sslv3 no-tls-tickets

# Default options
defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    option forwardfor
    option http-server-close
    stats   enable
    stats   uri /stats
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http-in
    bind *:80
    # Redirect all HTTP requests to HTTPS with a 301 status code
    redirect scheme https if !{ ssl_fc }

frontend https-in
    bind *:443 ssl crt /etc/ssl/private/your_certificate.pem
    # Your other SSL-related settings go here
    # ...

    # Your backend server configuration goes here
    # ...

# Listen to HAProxy stats on port 8080. You can access it via http://your-server-ip:8080/stats
listen stats
    bind *:8080
    mode http
    stats enable
    stats uri /stats
    stats realm HAProxy\ Statistics
    stats auth admin:your_password

