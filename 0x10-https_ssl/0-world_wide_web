#!/usr/bin/env bash
# script to dig subdomain records for the domain specified

# Function to query DNS information for a subdomain
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    local result="$(dig "${subdomain}.${domain}" | awk '/ANSWER SECTION/{getline; print}')"
    echo "The subdomain $subdomain is a $result record and points to $(echo "$result" | awk '{print $NF}')"
}

# Check if the script is called with at least one argument
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [<subdomain>]"
    exit 1
fi

domain="$1"
subdomain="$2"

if [ -z "$subdomain" ]; then
    # No subdomain provided, so check the default ones
    subdomains=("www" "lb-01" "web-01" "web-02")
    for sub in "${subdomains[@]}"; do
        get_dns_info "$domain" "$sub"
    done
else
    # Specific subdomain provided, so check only that one
    get_dns_info "$domain" "$subdomain"
fi

